<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/textViewPlayList"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GIAI ĐIỆU VÀ CẢM XÚC" />

    <ListView
        android:layout_below="@id/textViewPlayList"
        android:id="@+id/ListViewPlayList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Xem thêm PlayList"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="5dp"
        android:textSize="19sp"
        android:drawablePadding="10dp"
        android:id="@+id/textviewmoreplaylist"
        android:background="@drawable/round_backgroud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ListViewPlayList"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="8dp"
        android:drawableLeft="@drawable/iconmoreplaylist"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black" />
</RelativeLayout>