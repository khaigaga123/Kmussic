<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgrnhac"
    tools:context="com.Activity.MainActivity_dangky">

    <TextView
        android:id="@+id/textdangky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:layout_marginLeft="140dp"
        android:gravity="center"
        android:text="Đăng ký"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold"
        />
    <androidx.cardview.widget.CardView
        android:layout_marginTop="180dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="200dp"
        app:cardCornerRadius="30dp"
        android:layout_width="350dp"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:layout_height="400dp">
    <TextView
        android:id="@+id/txttaikhoandk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="60dp"
        android:text="Tài khoản : "
        android:textColor="@color/black"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/txtmatkhaudk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="120dp"
        android:text="Mật khẩu :"
        android:textColor="@color/black"
        android:textSize="18sp"
       />

    <TextView
        android:id="@+id/txtnhaplaimk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="180dp"
        android:lines="1"
        android:gravity="center"
        android:text="Nhập lại mật khẩu :"
        android:textColor="@color/black"
        android:textSize="18sp"
      />

    <EditText
        android:id="@+id/editTexttk"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="105dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="text"
        android:text=""
        android:textSize="15sp"
       />

    <EditText
        android:id="@+id/editTextmk"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="115dp"
        android:layout_marginLeft="105dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:text=""
        android:textSize="15sp"
       />

    <EditText
        android:id="@+id/editTextnhaplaimk"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="215dp"
        android:layout_marginLeft="105dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:text=""
        android:textSize="15sp"
        />

        <Button
            android:id="@+id/btdk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="130dp"
            android:background="@drawable/round_backgroud"
            android:text="Đăng ký" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>