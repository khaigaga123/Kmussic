<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imagebackgroudbanner"
        android:layout_width="match_parent"
        android:layout_height="200dp"></ImageView>
    <View
        android:layout_below="@+id/imagebackgroudbanner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/custom_backgroud" />

    <RelativeLayout
        android:layout_alignBottom="@id/imagebackgroudbanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginBottom="10dp"
            android:id="@+id/imageviewbanner"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="2dp" />
        <TextView
            android:id="@+id/textviewtillebannerbaihat"
            android:layout_toRightOf="@id/imageviewbanner"
            android:layout_alignTop="@id/imageviewbanner"
            android:textSize="17dp"
            android:text="Cắt đôi nỗi sầu"
            android:textStyle="bold"
            android:textColor="#E4DCDC"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_toRightOf="@id/imageviewbanner"
            android:layout_below="@id/textviewtillebannerbaihat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">

            <TextView
                android:id="@+id/textviewnoidung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:maxLines="2"
                android:text="Chào bạn hãy đón nghe ca khúc mới của ca sĩ chu bin"
                android:textColor="@color/white"
                android:textSize="13dp"
                tools:ignore="TextSizeCheck"></TextView>
            </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>