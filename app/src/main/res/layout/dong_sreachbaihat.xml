<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgsreachbaihat"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:scaleType="fitXY"
        tools:ignore="MissingConstraints"></ImageView>

    <TextView
        android:id="@+id/textviewsreachtenbaihat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgsreachbaihat"
        android:ellipsize="end"
        android:layout_marginTop="8dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:text="ten bai hat"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"

        tools:ignore="MissingConstraints"></TextView>
    <TextView
    android:id="@+id/textviewsreachtencasi"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/imgsreachbaihat"
    android:ellipsize="end"
    android:maxWidth="250dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/textviewsreachtenbaihat"
    android:singleLine="true"
    android:text="ten ca si"
    android:textColor="@color/black"
    android:textSize="18sp"
        tools:ignore="MissingConstraints"></TextView>

    <ImageView
        android:layout_width="30dp"
        android:id="@+id/imgsreachlovebaihat"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/iconlove" />
</RelativeLayout>