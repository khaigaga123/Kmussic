<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/anhnen"
    tools:context="com.Activity.MainActivity_dangnhap">
    <TextView
        android:id="@+id/textViewdangnhap"
        android:layout_width="285dp"
        android:layout_height="70dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="70dp"
        android:text="Đăng nhập"
        android:gravity="center"
        android:textColor="#E6C9C9"
        android:textSize="45dp"
        android:textStyle="bold"
        />
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="20dp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="140dp"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/cardview_shadow_start_color"
        android:layout_height="match_parent">
    <Button
        android:id="@+id/buttondangnhap"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="270dp"
        android:text="Đăng nhập"
        android:background="@drawable/custom_mau"
        />

    <Button
        android:id="@+id/buttondangky"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="205dp"
        android:layout_marginTop="270dp"
        android:text="Đăng ký"
        android:background="@drawable/custom_mau" />


        <TextView
            android:id="@+id/texttaikhoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"
            android:text="Tài khoản :"
            android:textColor="@color/purple_200"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewdangnhap" />

    <TextView
        android:id="@+id/textmatkhau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="170dp"
        android:text="Mật Khẩu :"
        android:textColor="@color/purple_200"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewdangnhap" />

    <EditText
        android:id="@+id/editTextTextusername"
        android:layout_width="209dp"
        android:layout_height="41dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="75dp"
        android:ems="10"
        android:textColor="#F3F0F8"
        android:hint="Username"
        android:inputType="text"
        android:backgroundTint="@color/purple_200"
        android:text=""
        android:textSize="15sp" />

        <EditText
            android:id="@+id/editTextTextmatkhau"
            android:layout_width="209dp"
            android:layout_height="41dp"
            android:layout_marginLeft="130dp"
            android:backgroundTint="@color/purple_200"
            android:layout_marginTop="165dp"
            android:layout_marginBottom="30dp"
            android:ems="10"
            android:textColor="@color/white"
            android:hint="Password"
            android:inputType="textPassword"
            android:text=""
            android:textSize="15sp" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>